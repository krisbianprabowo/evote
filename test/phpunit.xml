<phpunit colors="false">
<testsuite name="HSSTests">
<directory>./</directory>
</testsuite>
<filter>
<whitelist>
<directory suffix=".php">c:\xampp\htdocs/unittesting/</directory>
<exclude>
<directory suffix=".phtml">c:\xampp\htdocs/unittesting /coverage</directory>
<directory suffix=".php">c:\xampp\htdocs/unittesting /coverage</directory>
<directory suffix=".php">c:\xampp\htdocs/unittesting /test</directory>
</exclude>
</whitelist>
</filter>
<logging>
<log type="coverage-html" target="./log/codeCoverage" charset="UTF-8"
yui="true" highlight="true"
lowUpperBound="50" highLowerBound="80"/>
<log type="testdox-html" target="./log/testdox.html" />
</logging>
</phpunit>